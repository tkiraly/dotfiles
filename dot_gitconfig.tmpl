[user]
	name = Tamás Király
	email = {{ .email | quote }}
[submodule]
	recurse = true
[core]
	editor = code -w -n
[rebase]
	autosquash = true
	autostash = true
	missingCommitsCheck = warn
[color]
	ui = auto
[diff]
	algorithm = histogram
[merge]
	autoStash = true
[init]
	defaultBranch = master
[alias]
	cf = commit --fixup
[pull]
	rebase = true
	default = true
[push]
	autoSetupRemote = true
	default = current
	recurseSubmodules = on-demand
